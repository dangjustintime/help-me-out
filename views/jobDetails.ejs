<!DOCTYPE html>
<html>
    <% include ./partials/head.ejs %>
    <body>
        <% include ./partials/nav.ejs %>
        <div class="container">
            <img height=300px src="<%= Job.img %>">
            <h1><%= Job.title %></h1>
            <h3>Price: $<%= Job.price %></h3>
            <h5>Deadline: <%= Job.deadline %></h5>
            <h5>Author: <%= Job.author %></h5> 
            <h5>Description</h5>
            <div class="container">
                <p><%= Job.description %></p>
            </div>
            <h5>Helper: <%= Job.helper %></h5>
            <h5>Location: <%= Job.location %></h5>
            <h5>Skills Required</h5>
            <div class="container">
                <ul>
                    <% for (let i = 0; i < Job.skillsRequired.length; i++) { %>
                    <li><%= Job.skillsRequired[i] %></li>
                    <% } %>
                </ul>
            </div>
            <h5>Helper: <%= Job.helper %></h5>
            <h5>Finished: 
                <% if (Job.finished) { %>
                Finished
                <% } else { %>
                Not Finished
                <% } %>
            </h5>
            <% if (currentUser && currentUser.name == Job.author) { %>
            <a href="/job/<%= Job.id %>/edit">Edit</a>
            <% } %>
        </div>
    </body>
</html>
